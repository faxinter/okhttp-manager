<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cola.http.sample.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OKHttp Demo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#999"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/get_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get String" />

    <Button
        android:id="@+id/get_json"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Json" />

    <Button
        android:id="@+id/get_headers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提取响应头" />

    <Button
        android:id="@+id/post_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post方式提交String" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New OKHttp Demo"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#999"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/new_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Get" />
</LinearLayout>
